<%- include('../layout/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/add-product" method="post">
                <div class="form-group">
                    <label for="product">Title</label>
                    <input type="text" class="form-control" name="title" aria-describedby="addProduct">
                </div> 
                <div class="form-group">
                    <label for="category">Category</label>
                    <input type="text" class="form-control" name="category" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" name="price" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" class="form-control" name="image" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <textarea name="description" id="" cols="30" rows="6" style="width: 100%;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<%- include('../layout/footer.ejs') %>